#This instruction compiles task #4
CC= gcc
SRC= main.c holberton.c
OBJ= $(SRC:.c=.o)
NAME= holberton
RM= rm -f
CFLAGS= -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

re: oclean all

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

clean:
	$(RM) *~ $(NAME)
