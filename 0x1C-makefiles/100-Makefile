#This instruction compiles task #4
CC= gcc
SRC= main.c holberton.c
OBJ= $(SRC:.c=.o)
NAME= holberton
RM= rm -f
CFLAGS= -Wall -Werror -Wextra -pedantic
.PHONY: all fclean re

all: $(SRC:.c=.o) m.h
	$(CC) $(OBJ) -o $(NAME)

re: oclean all

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

clean:
	$(RM) *~ $(NAME)
